<Window x:Class="GOINSP.InspectionSpecs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InspectionSpecs" Height="600" Width="600"
        DataContext="{Binding InspectionSpecs, Source={StaticResource Locator}}"
        WindowStartupLocation="CenterScreen"
        Background="#3598dc">
    
    <Grid Margin="10">
        <StackPanel DataContext="{Binding InspectionSpecs}">
            <Label Content="{Binding name}" />
            <WrapPanel Orientation="Horizontal">
                <Image Width="150" Source="{Binding image}" Height="150" HorizontalAlignment="Left" />
                <WrapPanel Orientation="Vertical">
                    
                </WrapPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
