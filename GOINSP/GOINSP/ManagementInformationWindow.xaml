<Window x:Class="GOINSP.ManagementInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sparrow="http://sparrowtoolkit.codeplex.com/wpf"
        Title="Login" Height="350" Width="525"
        DataContext="{Binding Inspection, Source={StaticResource Locator}}"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="40" HorizontalAlignment="Center" Margin="0,50,0,0" Text="{Binding SelectedBedrijf.BedrijfsNaam}"></TextBlock>
            <Grid>
                <ComboBox ItemsSource="{Binding BedrijfInspecties}" SelectedItem="{Binding SelectedInspectie}"/>
                    
                
                <sparrow:SparrowChart Theme="Grayscale"  Width="500" Height="500">
                    <sparrow:SparrowChart.XAxis>
                        <sparrow:LinearXAxis/>
                    </sparrow:SparrowChart.XAxis>
                    <sparrow:SparrowChart.YAxis>
                        <sparrow:LinearYAxis/>
                    </sparrow:SparrowChart.YAxis>
                    <sparrow:LineSeries Points="0,1,1,2,2,3,3,4"/>
                </sparrow:SparrowChart>
                <DataGrid Name="bedrijven"  ItemsSource="{Binding Bedrijven}" CanUserAddRows="False"  AutoGenerateColumns="False" SelectedItem="{Binding SelectedBedrijf}" HorizontalAlignment="Right"  >
                <DataGrid.Columns>
                    <DataGridTextColumn IsReadOnly="True" Header="Bedrijfsnaam" Binding="{Binding Bedrijfsnaam}"/>
                </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </StackPanel>
        
    </Grid>
</Window>
