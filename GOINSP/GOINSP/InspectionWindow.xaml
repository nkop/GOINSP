<Window x:Class="GOINSP.InspectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GoInsp - Inspecties" Height="410" Width="610"
        DataContext="{Binding Inspection, Source={StaticResource Locator}}"
        WindowStartupLocation="CenterScreen"
        Background="#3598dc">
    <Grid>

        <ListView HorizontalAlignment="Left" Width="490" Height="352" ItemsSource="{Binding Inspections}" SelectedItem="{Binding selectedInspection}" Margin="10,10,0,0" VerticalAlignment="Top">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="145" Height="200" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <Label Content="{Binding name}" />
                        <Label Content="{Binding date}" />
                        <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding description}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Toevoegen" HorizontalAlignment="Left" Margin="510,10,0,0" Command="{Binding AddInspection}" VerticalAlignment="Top" Width="75"/>


    </Grid>
</Window>
