<Window x:Class="GOINSP.InspectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InspectionWindow" Height="400" Width="600"
        DataContext="{Binding Inspection, Source={StaticResource Locator}}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        
        <ListView HorizontalAlignment="Left" Height="352" ItemsSource="{Binding Inspections}" Margin="10,10,0,0" VerticalAlignment="Top" Width="575">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="400" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding name}" />
                        <Label Content="{Binding date}" />
                        <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding description}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--<Button Content="Toevoegen" HorizontalAlignment="Left" Margin="391,63,0,0" Command="{Binding AddInspection}" VerticalAlignment="Top" Width="75"/>-->


    </Grid>
</Window>
