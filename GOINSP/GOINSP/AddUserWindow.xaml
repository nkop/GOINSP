<Window x:Class="GOINSP.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:w="clr-namespace:GOINSP"
        DataContext="{Binding Account, Source={StaticResource Locator}}"
        Title="GoInsp - Gebruiker toevoegen" Height="300" Width="300"
        Background="#3598dc">
    <Grid>
        <StackPanel>
            <TextBlock>Gebruikersnaam</TextBlock>
            <TextBox Text="{Binding SelectedAccount.UserName}"></TextBox>
            <TextBlock Text="Wachtwoord"/>
            <w:BindablePasswordBox Password="{Binding SelectedAccount.Password}"/>
            <TextBlock Text="E-Mail"/>
            <TextBox Text="{Binding SelectedAccount.Email}"></TextBox>
            <!--<TextBlock Text="Gebruikerstype"/>
            <ComboBox IsEditable="True" ItemsSource="{Binding Rights}"  SelectedValue="{Binding SelectedAccount.AccountRights, Mode=TwoWay}"
                      Text="{Binding SelectedAccount.AccountRights, UpdateSourceTrigger=LostFocus}"></ComboBox>-->
            <Button Content="Maak account aan" Command="{Binding CreateAccountCommand}"/>
            
        </StackPanel>
    </Grid>
</Window>
